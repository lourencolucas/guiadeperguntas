<!-- Header aqui -->
<%- include('./partials/header.ejs')%>

<body>
    <!-- Navbar aqui -->
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1 id="pergunta">
            <%= pergunta.titulo %>
        </h1>
        <p>
            <%= pergunta.descricao %>
        </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Sua resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3 class="responder">Respostas:</h3>
        <% respostas.forEach(resposta => {%>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div>
        <% }) %>
    </div>
</body>
<!-- Footer/Scripts Aqui -->
<%- include('./partials/footer.ejs')%>