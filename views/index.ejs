<!-- Header aqui -->
<%- include('./partials/header.ejs')%>

<body>
    <!-- Navbar aqui -->
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <div class="mx-auto" style="width: 200px;">
            <h1 class="pergunta">Perguntas</h1>
        </div>
        <a href="/perguntar" class="btn btn-dark" id="perguntar-btn">Perguntar</a>
        <br>
        <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
            </div>
        </div>
        <% }) %>
        <br>
    </div>
</body>
<!-- Footer/Scripts Aqui -->
<%- include('./partials/footer.ejs')%>